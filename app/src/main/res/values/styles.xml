<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBaseStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ButtonGrayStyle" parent="ButtonBaseStyle">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonOrangeStyle" parent="ButtonBaseStyle">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDarkGrayStyle" parent="ButtonBaseStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>